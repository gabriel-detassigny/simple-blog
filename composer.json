{
    "name": "gabriel-detassigny/simple-blog",
    "description": "A simple blog built in PHP",
    "require": {
        "php": "^7.3|^8.0",
        "gdetassigny/simple-container": "^0.1",
        "guzzlehttp/psr7": "^1.4",
        "nikic/fast-route": "^1.2",
        "twig/twig": "^2.12",
        "psr/container": "^1.0",
        "vlucas/phpdotenv": "^2.4",
        "doctrine/orm": "^2.8",
        "doctrine/annotations": "^1.13",
        "shrikeh/teapot": "^2.3",
        "monolog/monolog": "^1.25",
        "saffyre/basic-http-authentication": "^1.0",
        "ext-json": "*",
        "suin/php-rss-writer": "^1.6",
        "robmorgan/phinx": "^0.10.6",
        "gregwar/captcha": "^1.1",
        "symfony/yaml": "^4.2",
        "aws/aws-sdk-php": "^3.181"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "phake/phake": "^3.1",
        "fzaninotto/faker": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "GabrielDeTassigny\\Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GabrielDeTassigny\\Blog\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-tests": "vendor/bin/phpunit"
    }
}
