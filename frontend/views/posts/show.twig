{% set pageTitle = post.getTitle ~ ' | ' ~ blogTitle %}
{% extends "base.twig" %}
{% block content %}
    <div class="blog-post blog-post-show">
        <div class="blog-header post-header">
            <h1>{{ post.getTitle }}</h1>
            <p class="lead blog-description post-description">{{ post.getSubtitle }}</p>
        </div>
        <div class="row post-content">
            <p>{{ post.getText | raw }}</p>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <p class="blog-post-meta">
                    {{ post.getCreatedAt|date('F jS, Y') }} | Written by {{ post.getAuthor.getName }}
                </p>
            </div>
            <div class="col-sm-2 blog-post-follow">
                <a href="/rss">
                    <img src="/images/rss_icon.svg" alt="RSS" title="RSS feed" width="25" height="25"> RSS Feed
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block css %}<link rel="stylesheet" href="/css/prism.css">{% endblock %}

{% block javascript %}<script src="/js/prism.js"></script>{% endblock %}